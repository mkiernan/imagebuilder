{
  "builders": [{
      "type": "azure-arm",
      "client_id": "<REPLACE>",
      "client_secret": "<REPLACE>",
      "tenant_id": "<REPLACE>",
      "subscription_id": "<REPLACE>",

      "managed_image_resource_group_name": "mkimagegrp",
      "managed_image_name": "redisclientImage",

      "os_type": "Linux",
      "image_publisher": "RedHat",
      "image_offer": "RHEL",
      "image_sku": "8.2",

      "ssh_pty": "true", 

      "azure_tags": {
          "dept": "Engineering",
          "task": "Image deployment"
      },

      "location": "WestUS2",
      "vm_size": "Standard_DS2_v2"
  }],
  "provisioners": [
      {
          "type": "file",
          "source": "install_redis.sh",
          "destination": "/tmp/install_redis.sh"
      },
      {
          "type": "file",
          "source": "startup.py", 
          "destination": "/tmp/startup.py"
      },
      {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
         "mv /tmp/startup.py /opt/startup.py",
         "chmod +x /opt/startup.py",
         "chmod +x /tmp/install_redis.sh",
         "/tmp/install_redis.sh client",
         "echo DONE!",
	 "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
      ],
      "inline_shebang": "/bin/sh -x",
      "type": "shell",
      "skip_clean": true
  }]
}

